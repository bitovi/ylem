{
  "root": true,
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true
      }
  },
  "rules": {
      "semi": "error",
      "indent": [ "error", "tab" ],
      "react/prop-types": "off",
      "no-console": "warn"
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  }
}
