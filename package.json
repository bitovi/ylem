{
  "name": "ylem",
  "version": "3.0.0-dev",
  "description": "add Observable Stores to React components",
  "homepage": "http://canjs.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bitovi/ylem",
    "github": "http://bitovi.com"
  },
  "author": {
    "name": "Bitovi",
    "email": "contact@bitovi.com",
    "url": "http://bitovi.com",
    "github": "http://bitovi.com"
  },
  "scripts": {
    "preversion": "npm test",
    "postversion": "git push --tags && git push",
    "prepublishOnly": "npm run build",
    "testee-src": "testee test/test.html --browsers firefox",
    "testee-development": "testee test/test-development.html --browsers firefox",
    "testee-production": "testee test/test-production.html --browsers firefox",
    "test-src": "npm run build && npm run testee-src",
    "test-development": "npm run build && npm run testee-development",
    "test-production": "npm run build && npm run testee-production",
    "pretest": "npm run detect-cycle && npm run depcheck && npm run eslint",
    "test": "npm run test-src && npm run test-development && npm run test-production",
    "release:pre": "npm version prerelease && npm publish --tag pre",
    "release:patch": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish",
    "eslint": "eslint .",
    "depcheck": "depcheck --ignore-dirs=dist --ignores=~,serve,steal,eslint-*,ylem",
    "detect-cycle": "detect-cyclic-packages",
    "build": "node build.js",
    "develop": "done-serve --static --develop --port 8080"
  },
  "main": "dist",
  "module": "index",
  "keywords": [
    "react",
    "reactjs",
    "state-management",
    "observables",
    "canjs",
    "canjs-plugin",
    "donejs",
    "bitovi",
    "javascript"
  ],
  "dependencies": {
    "can-diff": "^1.0.4",
    "can-key": "^0.5.0",
    "can-namespace": "^1.0.0",
    "can-observation": "^4.0.1",
    "can-observation-recorder": "^1.0.2",
    "can-observe": "^2.1.0",
    "can-queues": "^1.1.0",
    "can-reflect": "^1.16.1",
    "hoist-non-react-statics": "^2.5.0",
    "prop-types": "^15.7.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "can-define": "^2.7.10",
    "depcheck": "^0.7.1",
    "detect-cyclic-packages": "^1.1.1",
    "done-serve": "^3.3.1",
    "eslint": "^5.13.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.0.1",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-testing-library": "^5.8.0",
    "steal": "^1.12.6",
    "steal-qunit": "^1.0.2",
    "steal-tools": "^1.11.10",
    "testee": "^0.9.0"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "steal": {
    "main": "index",
    "babelOptions": {
      "plugins": [
        "transform-decorators-legacy",
        "transform-class-properties"
      ]
    },
    "envs": {
      "test-dev": {
        "map": {
          "ylem": "ylem/dist/development/index"
        }
      },
      "test-prod": {
        "map": {
          "ylem": "ylem/dist/production/index"
        }
      }
    }
  }
}
